{
    "compilerOptions": {
      "target": "ES2020",
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": false,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "ES6", 
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "baseUrl": "./",
    },
    "include": ["./"]
}